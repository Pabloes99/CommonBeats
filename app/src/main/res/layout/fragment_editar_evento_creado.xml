<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@android:id/content"
    tools:context=".iu.Evento.EditarEventoCreadoFragment"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:text="Título" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTituloEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tidTituloEditarEventoCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:text="Estilo" />

    <Spinner
        android:id="@+id/spEstiloEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:text="Fecha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFechaEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tidFechaEditarEventoCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:text="Hora" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilHoraEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tidHoraEditarEventoCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:text="Localización" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLocalizacionEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tidLocalizacionEditarEventoCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".45"

        android:text="Descripción" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDescripcionEditarEventoCreado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tidDescripcionEditarEventoCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEditarEventoCreado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_add" />
    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>